<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackblue">

    <ProgressBar
        android:id="@+id/signprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/linearLayout0"
        android:background="@color/top_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_return" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_"
                android:textColor="@drawable/white"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/linearLayout0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:id="@+id/TOPbackground"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg01"/>


        <ImageView
                android:id="@+id/pic1"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="180dp"
                android:background="@drawable/banner"/>

    </FrameLayout>

    <LinearLayout
            android:id="@+id/line1"
            android:orientation="vertical"
            android:layout_below="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:id="@+id/usericon"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_user"/>

            <EditText
                android:id="@+id/user_name_sign"
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:layout_height="48dp"
                android:inputType="text"
                android:lines="1"
                android:background="@drawable/edittext"
                android:textSize="18dp"
                android:textColorHint="@color/colorTextGrey"
                android:hint="用户名"/>
        </LinearLayout>
        <TextView
            android:id="@+id/signshowerro"
            android:textColor="@color/read"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:id="@+id/passicon"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_password"/>

            <EditText
                android:id="@+id/user_pass_sign"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:lines="1"
                android:textSize="18dp"
                android:background="@drawable/edittext"
                android:textColorHint="@color/colorTextGrey"
                android:hint="密码"/>
            <ToggleButton
                android:id="@+id/togglebtton"
                android:layout_gravity="center_vertical|end"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="10dp"
                android:background="@drawable/selector_pwd"
                android:textOff=" "
                android:textOn="" />
        </LinearLayout>
        <TextView
            android:id="@+id/signshowerro1"
            android:textColor="@color/read"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:id="@+id/surepassicon"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_password"/>

            <EditText
                android:id="@+id/sure_pass_sign"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:lines="1"
                android:textSize="18dp"
                android:background="@drawable/edittext"
                android:textColorHint="@color/colorTextGrey"
                android:hint="确认密码"/>
            <ToggleButton
                android:id="@+id/togglebtton2"
                android:layout_gravity="center_vertical|end"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="10dp"
                android:background="@drawable/selector_pwd"
                android:textOff=" "
                android:textOn="" />
        </LinearLayout>
        <TextView
            android:id="@+id/signshowerro2"
            android:textColor="@color/read"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:id="@+id/phoneicon"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_phone"/>

            <EditText
                android:id="@+id/user_phone_sign"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:lines="1"
                android:maxLength="11"
                android:inputType="phone"
                android:textSize="18dp"
                android:paddingLeft="8dp"
                android:background="@drawable/edittext"
                android:textColorHint="@color/colorTextGrey"
                android:hint="手机号"/>
        </LinearLayout>
        <TextView
            android:id="@+id/sginshowerro3"
            android:textColor="@color/read"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

            <CheckBox
                    android:id="@+id/checkbox"
                    android:button="@drawable/selector_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agree_deal"/>

        </LinearLayout>

        <TextView
               android:id="@+id/seetreaty"
               android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_file"
                android:layout_gravity="center"/>


    </LinearLayout>

    <FrameLayout
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btt_sign_up"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_button"
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:text="@string/sign_bttn"
            android:textSize="18sp"/>

        <ImageView

                android:id="@+id/belowbackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/company_support"
                android:layout_marginTop="100dp"/>


       </FrameLayout>
      </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>