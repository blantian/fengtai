<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackblue"
    android:orientation="vertical"
    tools:context=".activity.farmdoc.FDMemberActivity">

    <TableLayout
        android:id="@+id/top_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/top_tab">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/find_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_return" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="130dp"
                android:hint="成员信息"
                android:textColorHint="@color/colorwhite"
                android:textSize="24dp" />
        </LinearLayout>
    </TableLayout>

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.fengtai.fragment.farmdoc.FDMemberFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>