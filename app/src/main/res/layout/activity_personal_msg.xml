<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackblue">
    <LinearLayout
        android:background="@color/top_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/personal_back"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_return"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:id="@+id/lin_top"
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:hint="个人信息"
            android:textColorHint="@drawable/white"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"/>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg01">

        </ImageView>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/userhead"
            android:layout_width="378dp"
            android:layout_height="199dp"
            android:background="@drawable/point"/>

        <ImageView
            android:id="@+id/personal_head"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cio_head"/>
        <TextView
            android:id="@+id/personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="105dp"
            android:text="@string/head_name"
            android:textSize="20dp"
            android:textColor="@drawable/white"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/welcome_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎来到"
                android:textColor="@drawable/white" />
            <TextView
                android:id="@+id/personal_name0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="的牧场"
                android:textColorHint="@drawable/white" />
          </LinearLayout>
       </FrameLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:background="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="用户名"/>

                <TextView
                    android:id="@+id/showpersonalname"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="性别"/>

                <TextView
                    android:id="@+id/showpersonalsex"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="手机号"/>

                <TextView
                    android:id="@+id/showpersonalphone"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="邮箱"/>

                <TextView
                    android:id="@+id/showpersonalemail"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="请完善信息"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="身份证号码"/>

                <TextView
                    android:id="@+id/showpersonalidcard"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="年龄"/>

                <TextView
                    android:id="@+id/showpersonalage"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="地址"/>

                <TextView
                    android:id="@+id/showpersonaladress"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal|end"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/personaledite"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="修改个人信息"
                android:textSize="20dp"
                android:background="@color/afterSelector"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <FrameLayout
                android:background="@drawable/bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company_support"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>