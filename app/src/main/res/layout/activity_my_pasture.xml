<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/colorBlackblue">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/top_tab">
        <TextView
            android:layout_marginTop="17dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:hint="我的牧场"
            android:textColorHint="@drawable/white"
            android:textSize="20dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <FrameLayout
         android:layout_below="@+id/lin_top"
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg01">

        </ImageView>


        <ImageView
                android:layout_width="378dp"
                android:layout_height="199dp"
                android:layout_marginLeft="17dp"
                android:background="@drawable/bg06"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/farmusername"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎来到"/>
                <TextView
                    android:id="@+id/farmliusername"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="的牧场！"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
            android:id="@+id/map"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/white"
            android:layout_below="@+id/framelayout">

    </LinearLayout>

    <FrameLayout
                 android:layout_below="@+id/map"
                 android:layout_marginTop="80dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
    <ImageView

            android:id="@+id/belowbackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"/>
        <TextView

                android:id="@+id/company_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/company_support"/>
    </FrameLayout>


</RelativeLayout>