<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBlackblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/top_tab"
        android:background="@color/top_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/breed_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_return"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/titelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:textSize="24dp"
                android:hint="养殖"
                android:textColorHint="@color/colorwhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/white"
                android:text="档案"
                android:textSize="24dp"/>
        </LinearLayout>
    </TableLayout>
   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       <LinearLayout
           android:background="@color/colorBlack"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="28dp">
           <TextView
               android:textColor="@color/afterSelector"
               android:layout_marginLeft="20dp"
               android:layout_gravity="center_vertical"
               android:text="购置时间："
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_gravity="center_vertical"
               android:textColor="@color/afterSelector"
               android:id="@+id/breed_by_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2019-11-15 00:00:00"/>
       </LinearLayout>
       <RelativeLayout
           android:id="@+id/next_page"
           android:background="@color/colorBlack"
           android:layout_width="match_parent"
           android:layout_height="100dp">
           <ImageView
               android:id="@+id/breed_head"
               android:layout_marginLeft="30dp"
               android:layout_centerVertical="true"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:background="@drawable/cio_head"/>
           <TextView
               android:id="@+id/breed_name"
               android:layout_toRightOf="@+id/breed_head"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="20dp"
               android:textSize="20dp"
               android:text="猪猪"
               android:textColor="@color/afterSelector"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/breed_number"
               android:layout_marginTop="28dp"
               android:layout_below="@id/breed_name"
               android:layout_toRightOf="@id/breed_head"
               android:layout_marginLeft="20dp"
               android:textColor="@color/afterSelector"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="100"/>
           <TextView
               android:id="@+id/ge"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="个"
               android:textColor="@color/afterSelector"
               android:layout_toRightOf="@id/breed_number"
               android:layout_below="@id/breed_name"
               android:layout_marginTop="28dp"/>
           <TextView
               android:id="@+id/breedincomename"
               android:text="支出："
               android:layout_marginLeft="40dp"
               android:textColor="@color/afterSelector"
               android:layout_below="@id/breed_name"
               android:layout_marginTop="28dp"
               android:layout_toRightOf="@id/ge"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/breed_priess"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/breedincomename"
               android:layout_below="@id/breed_name"
               android:layout_marginTop="28dp"
               android:text="1500.00"
               android:textColor="@color/afterSelector"/>
           <TextView
               android:layout_below="@+id/breed_name"
               android:textColor="@color/afterSelector"
               android:layout_marginTop="28dp"
               android:layout_toRightOf="@id/breed_priess"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="元"/>
       </RelativeLayout>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@drawable/bg03"/>
       <LinearLayout
           android:gravity="center_horizontal"
           android:layout_marginTop="40dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/base_msg"
               android:gravity="center"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:background="@drawable/bg07"
               android:text="基础信息"/>
           <TextView
               android:id="@+id/doc_msg"
               android:layout_marginLeft="50dp"
               android:gravity="center"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:background="@drawable/bg07"
               android:text="档案信息"/>
       </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="40dp"
               android:gravity="center_horizontal">

               <TextView
                   android:id="@+id/mediciens_msg"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:gravity="center"
                   android:text="药浴信息" />

               <TextView
                   android:id="@+id/antipidemic_msg"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:layout_marginLeft="50dp"
                   android:background="@drawable/bg07"
                   android:gravity="center"
                   android:text="防疫信息" />
           </LinearLayout>
       <LinearLayout
           android:gravity="center_horizontal"
           android:layout_marginTop="40dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/breed_msg"
               android:gravity="center"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:background="@drawable/bg07"
               android:text="饲喂信息"/>
           <TextView
               android:id="@+id/watering_msg"
               android:layout_marginLeft="50dp"
               android:gravity="center"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:background="@drawable/bg07"
               android:text="饮水信息"/>
         </LinearLayout>
           <LinearLayout
               android:gravity="center_horizontal"
               android:layout_marginTop="40dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/farm_msg"
                   android:gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:text="放牧信息"/>
               <TextView
                   android:id="@+id/reproduce_msg"
                   android:layout_marginLeft="50dp"
                   android:gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:text="繁殖信息"/>
           </LinearLayout>
           <LinearLayout
               android:gravity="center_horizontal"
               android:layout_marginTop="40dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/down_msg"
                   android:gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:text="绒产量"/>
               <TextView
                   android:id="@+id/transaction_msg"
                   android:layout_marginLeft="50dp"
                   android:gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:text="交易信息"/>
           </LinearLayout>
           <LinearLayout
               android:gravity="center_horizontal"
               android:layout_marginTop="40dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/slaughter_msg"
                   android:gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:text="屠宰信息"/>
               <TextView
                   android:id="@+id/prepare_marketing"
                   android:layout_marginLeft="50dp"
                   android:gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:text="准备出栏"/>
           </LinearLayout>
           <LinearLayout
               android:gravity="center_horizontal"
               android:layout_marginTop="40dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/abnormal"
                   android:layout_marginRight="190dp"
                   android:gravity="center"
                   android:layout_width="150dp"
                   android:layout_height="50dp"
                   android:background="@drawable/bg07"
                   android:text="异常"/>
           </LinearLayout>
       </LinearLayout>
   </android.support.v4.widget.NestedScrollView>


</LinearLayout>